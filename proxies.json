{
  "$schema": "http://json.schemastore.org/proxies",
  "proxies": {
    "echo-proxy": {
      "matchCondition": {
        "methods": ["GET"],
        "route": "/api/echo/{stuff}"
      },
      "responseOverrides": {
        "response.body": "Hello, {stuff}",
        "response.headers.Content-Type": "text/plain"
      }
    }
  }
}
